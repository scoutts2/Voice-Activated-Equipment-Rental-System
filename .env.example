# LiveKit Configuration
# Get these from: https://cloud.livekit.io/
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_api_key_here
LIVEKIT_API_SECRET=your_api_secret_here

# OpenAI Configuration
# Get API key from: https://platform.openai.com/api-keys
# Used for: Conversational AI (GPT models for understanding and responding)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Deepgram Configuration (Speech-to-Text)
# Get API key from: https://console.deepgram.com/
# Used for: Converting customer speech to text (alternative to LiveKit default STT)
DEEPGRAM_API_KEY=your-deepgram-api-key-here

# ElevenLabs Configuration (Text-to-Speech)
# Get API key from: https://elevenlabs.io/
# Used for: Converting agent responses to natural-sounding voice
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Google Sheets Configuration
# Option 1: Service Account (Recommended for production)
GOOGLE_SERVICE_ACCOUNT_FILE=service-account.json

# Option 2: OAuth (for development/testing)
# GOOGLE_CREDENTIALS_FILE=credentials.json

# Google Sheet ID (from the sheet URL)
# URL format: https://docs.google.com/spreadsheets/d/{SHEET_ID}/edit
EQUIPMENT_SHEET_ID=your_google_sheet_id_here
EQUIPMENT_SHEET_NAME=Sheet1

# Optional: CSV file path (alternative to Google Sheets)
EQUIPMENT_CSV_PATH=data/equipment_inventory.csv

# Agent Configuration
AGENT_NAME=Metro Equipment Rental Agent
COMPANY_NAME=Metro Equipment Rentals

# Logging
LOG_LEVEL=INFO
